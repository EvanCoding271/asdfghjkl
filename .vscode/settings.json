{
    "C_Cpp.default.compilerPath": "g++",
    "files.associations": {
        "*.cpp": "cpp"
    },
    "code-runner.executorMap": {
        "cpp": "cd $dir && g++ $fileName -o $fileNameWithoutExt.exe && $fileNameWithoutExt.exe"
    },
    "code-runner.cwd": "$dir",
    "code-runner.runInTerminal": true,
    "files.exclude": {
        "**/*.exe": false,
        "**/*.o": false
    }
}